<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AnkiEstrella" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/anki_blue_100</item>
        <item name="colorPrimaryVariant">@color/anki_blue_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/anki_blue_50</item>
        <item name="colorSecondaryVariant">@color/anki_blue_100</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.AnkiEstrella.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AnkiEstrella.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AnkiEstrella.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AnkiEstrella.Transparent" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>